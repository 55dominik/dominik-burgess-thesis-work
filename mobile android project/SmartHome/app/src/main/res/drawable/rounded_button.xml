<?xml version="1.0" encoding="utf-8"?> <!--  res/drawable/rounded_edittext.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_enabled="true" android:state_pressed="false">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape>
                <solid android:color="#d6d6d6"/>
                <corners android:radius="20dp"/>
            </shape>
        </item>

        <item>
            <shape>
                <gradient
                    android:angle="315"
                    android:startColor="?attr/btnStartColor"
                    android:endColor="?attr/btnEndColor"
                    android:type="linear" />
                <corners
                    android:bottomLeftRadius="20dp"
                    android:bottomRightRadius="20dp"
                    android:topLeftRadius="20dp"
                    android:topRightRadius="20dp" />
            </shape>
        </item>
    </layer-list>
</item>

<item android:state_enabled="true" android:state_pressed="true">
    <layer-list>
        <!-- SHADOW -->
        <item>
            <shape>
                <solid android:color="#666666"/>
                <corners android:radius="20dp"/>

            </shape>
        </item>
        <!-- BUTTON -->
        <item>
            <shape>
                <gradient
                    android:angle="315"
                    android:startColor="?attr/btnStartColorPressed"
                    android:endColor="?attr/btnEndColorPressed"
                    android:type="linear" />
                <corners
                    android:bottomLeftRadius="20dp"
                    android:bottomRightRadius="20dp"
                    android:topLeftRadius="20dp"
                    android:topRightRadius="20dp" />
            </shape>
        </item>
    </layer-list>
</item>
    <item android:state_enabled="false">
        <layer-list>
            <!-- SHADOW - none -->
            <item>
                <shape>
                    <solid android:color="#666666"/>
                    <corners android:radius="20dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item>
                <shape>
                    <gradient
                        android:angle="315"
                        android:startColor="?attr/btnStartColorInactive"
                        android:endColor="?attr/btnEndColorInactive"
                        android:type="linear" />
                    <corners
                        android:bottomLeftRadius="20dp"
                        android:bottomRightRadius="20dp"
                        android:topLeftRadius="20dp"
                        android:topRightRadius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
